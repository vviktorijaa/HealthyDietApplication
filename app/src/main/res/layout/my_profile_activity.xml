<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/grape_blurred"
            android:id="@+id/linear_layout"
            android:orientation="vertical" />
    <Button
            android:text="Log out"
            android:layout_width="125dp"
            android:layout_height="69dp" android:id="@+id/addCaloriesButton2"
            app:backgroundTint="#517528" android:textSize="18sp"
            android:onClick="addCalories"
            android:textColor="@color/white" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/profileMenu3"
            android:layout_marginBottom="20dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="346dp"
            android:layout_height="118dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="100dp" android:gravity="center"
            android:layout_marginLeft="30dp" android:layout_marginStart="30dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="143dp"
                android:layout_height="match_parent" android:gravity="center">
            <TextView
                    android:text="Height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView24" android:gravity="center"
                    android:textColor="#517528" android:textSize="25sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView32" android:gravity="center"
                    android:textSize="23sp" android:textColor="#517528"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="140dp"
                android:layout_height="match_parent" android:gravity="center">
            <TextView
                    android:text="Weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView34" android:gravity="center"
                    android:textColor="#517528" android:textSize="25sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView33" android:gravity="center"
                    android:textSize="23sp" android:textColor="#517528"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="128dp"
                android:layout_height="match_parent" android:gravity="center">
            <TextView
                    android:text="BMI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView36" android:gravity="center"
                    android:textColor="#517528" android:textSize="25sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView35" android:gravity="center"
                    android:textSize="23sp" android:textColor="#517528"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
            android:layout_width="136dp"
            android:layout_height="86dp" android:id="@+id/recipesMenu2"
            android:background="@drawable/rectangle3"
            app:layout_constraintStart_toEndOf="@+id/profileMenu" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:onClick="recipesActivity"/>
    <TextView
            android:text="Recipes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/recipesMenuText2"
            android:textColor="#DEDFBE" android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="@+id/recipesMenu2"
            app:layout_constraintStart_toStartOf="@+id/recipesMenu2" android:layout_marginBottom="8dp"/>
    <TextView
            android:layout_width="135dp"
            android:layout_height="86dp" android:id="@+id/profileMenu3"
            android:background="@drawable/rectangle2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="My profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/profileMenuText2"
            android:textColor="@color/white" android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="@+id/profileMenu3"
            app:layout_constraintEnd_toStartOf="@+id/recipesMenu2" android:layout_marginBottom="8dp"
            android:textStyle="bold"/>
    <TextView
            android:layout_width="136dp"
            android:layout_height="86dp" android:id="@+id/homeMenu2"
            android:background="@drawable/rectangle"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/profileMenu"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:onClick="homeActivity"/>
    <TextView
            android:text="Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/homeMenuText3"
            android:textColor="#DEDFBE" android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/profileMenu3"
            app:layout_constraintBottom_toBottomOf="@+id/homeMenu2" android:layout_marginBottom="8dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="273dp"
            android:layout_height="63dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp" android:layout_marginStart="30dp" android:gravity="center">
        <TextView
                android:text="Hello"
                android:layout_width="56dp"
                android:layout_height="wrap_content" android:id="@+id/HelloProfile" android:layout_weight="1"
                android:textColor="#517528" android:textSize="35sp" android:textStyle="bold"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/userName" android:layout_weight="1"
                android:textColor="#517528" android:textSize="35sp" android:textStyle="bold"/>
    </LinearLayout>
    <ImageView
            android:layout_width="69dp"
            android:layout_height="54dp" app:srcCompat="@drawable/home_kremovo" android:id="@+id/imageView19"
            app:layout_constraintBottom_toBottomOf="@+id/homeMenu2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/homeMenu2" android:layout_marginBottom="30dp"/>
    <ImageView
            android:layout_width="71dp"
            android:layout_height="51dp" app:srcCompat="@drawable/my_profile_belo"
            android:id="@+id/imageView34"
            app:layout_constraintBottom_toBottomOf="@+id/profileMenu3"
            app:layout_constraintStart_toStartOf="@+id/profileMenu3"
            app:layout_constraintEnd_toEndOf="@+id/profileMenu3" android:layout_marginBottom="30dp"/>
    <ImageView
            android:layout_width="70dp"
            android:layout_height="52dp" app:srcCompat="@drawable/kapa_krem" android:id="@+id/imageView44"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="@+id/recipesMenu2"
            app:layout_constraintStart_toStartOf="@+id/recipesMenu2" android:layout_marginBottom="30dp"/>
    <ImageView
            android:layout_width="55dp"
            android:layout_height="51dp" app:srcCompat="@drawable/settings" android:id="@+id/imageView9"
            android:onClick="profileSettings" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="40dp" android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
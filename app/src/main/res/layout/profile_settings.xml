<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/grape_blurred"
            android:id="@+id/linear_layout"
            android:orientation="vertical">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="49dp" app:srcCompat="@drawable/back" android:id="@+id/imageView2"
                android:onClick="myProfileActivity" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp" android:layout_marginRight="320dp" android:layout_marginEnd="320dp"/>
    </LinearLayout>
    <ScrollView
            android:layout_width="355dp"
            android:layout_height="336dp"
            app:layout_constraintTop_toBottomOf="@+id/homeSettingsText3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/profileMenu5" android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp" android:id="@+id/scrollView4">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:gravity="center">
            <TextView
                    android:text="Change username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/changeUsername" android:textColor="#517528"
                    android:textSize="27sp" android:onClick="changeUsername"/>
            <TextView
                    android:text="──────────────────"
                    android:layout_width="match_parent"
                    android:layout_height="19dp" android:id="@+id/textView38" android:textSize="25sp"
                    android:textColor="#517528"/>
            <TextView
                    android:text="Change password"
                    android:layout_width="match_parent"
                    android:layout_height="51dp" android:id="@+id/changePassword" android:textColor="#517528"
                    android:textSize="27sp" android:gravity="bottom" android:onClick="changePassword"/>
            <TextView
                    android:text="──────────────────"
                    android:layout_width="match_parent"
                    android:layout_height="19dp" android:id="@+id/textView41" android:textSize="25sp"
                    android:textColor="#517528"/>
            <TextView
                    android:text="Change gender"
                    android:layout_width="match_parent"
                    android:layout_height="51dp" android:id="@+id/changeGender" android:textColor="#517528"
                    android:textSize="27sp" android:gravity="bottom"/>
            <TextView
                    android:text="──────────────────"
                    android:layout_width="match_parent"
                    android:layout_height="19dp" android:id="@+id/textView43" android:textSize="25sp"
                    android:textColor="#517528"/>
            <TextView
                    android:text="Update age"
                    android:layout_width="match_parent"
                    android:layout_height="51dp" android:id="@+id/updateAge" android:textColor="#517528"
                    android:textSize="27sp" android:gravity="bottom"/>
            <TextView
                    android:text="──────────────────"
                    android:layout_width="match_parent"
                    android:layout_height="19dp" android:id="@+id/textView47" android:textSize="25sp"
                    android:textColor="#517528"/>
            <TextView
                    android:text="Update height"
                    android:layout_width="match_parent"
                    android:layout_height="51dp" android:id="@+id/updateHeight" android:textColor="#517528"
                    android:textSize="27sp" android:gravity="bottom" android:onClick="updateHeight"/>
            <TextView
                    android:text="──────────────────"
                    android:layout_width="match_parent"
                    android:layout_height="19dp" android:id="@+id/textView49" android:textSize="25sp"
                    android:textColor="#517528"/>
            <TextView
                    android:text="Update weight"
                    android:layout_width="match_parent"
                    android:layout_height="51dp" android:id="@+id/updateWeight" android:textColor="#517528"
                    android:textSize="27sp" android:gravity="bottom" android:onClick="updateWeight"/>
            <TextView
                    android:text="──────────────────"
                    android:layout_width="match_parent"
                    android:layout_height="19dp" android:id="@+id/textView51" android:textSize="25sp"
                    android:textColor="#517528"/>
            <TextView
                    android:text="Change goal"
                    android:layout_width="match_parent"
                    android:layout_height="51dp" android:id="@+id/textView52" android:textColor="#517528"
                    android:textSize="27sp" android:gravity="bottom"/>
            <TextView
                    android:text="──────────────────"
                    android:layout_width="match_parent"
                    android:layout_height="19dp" android:id="@+id/textView53" android:textSize="25sp"
                    android:textColor="#517528"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="31dp">
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="55dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="98dp"
                        android:layout_height="match_parent">
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="166dp"
                        android:layout_height="match_parent">
                    <Button
                            android:text="Log out"
                            android:layout_width="match_parent"
                            android:layout_height="55dp" android:id="@+id/logout" app:backgroundTint="#517528"
                            android:onClick="logout"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="90dp"
                        android:layout_height="55dp">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <TextView
            android:layout_width="136dp"
            android:layout_height="86dp" android:id="@+id/recipesMenu4"
            android:background="@drawable/rectangle3"
            app:layout_constraintStart_toEndOf="@+id/profileMenu" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:onClick="recipesActivity"/>
    <TextView
            android:layout_width="263dp"
            android:layout_height="52dp"
            android:text="Profile settings"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="#517528" android:textSize="35sp"
            android:textStyle="bold" android:id="@+id/homeSettingsText3"
            android:layout_marginTop="90dp" android:layout_marginLeft="30dp" android:layout_marginStart="30dp"/>
    <TextView
            android:layout_width="135dp"
            android:layout_height="86dp" android:id="@+id/profileMenu5"
            android:background="@drawable/rectangle2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="myProfileActivity"/>
    <TextView
            android:layout_width="136dp"
            android:layout_height="86dp" android:id="@+id/homeMenu4"
            android:background="@drawable/rectangle"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/profileMenu"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:onClick="homeActivity"/>
    <TextView
            android:text="Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/homeMenuText2"
            android:textColor="#DEDFBE" android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/homeMenu4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/homeMenu4" android:layout_marginBottom="8dp"/>
    <TextView
            android:text="Recipes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/homeMenuText8"
            android:textColor="#DEDFBE" android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/recipesMenu4" android:layout_marginBottom="8dp"/>
    <TextView
            android:text="My profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/homeMenuText4"
            android:textColor="@color/white" android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/homeMenu4"
            android:layout_marginBottom="8dp" app:layout_constraintEnd_toStartOf="@+id/recipesMenu4"
            app:layout_constraintStart_toStartOf="@+id/profileMenu5" android:textStyle="bold"/>
    <ImageView
            android:layout_width="61dp"
            android:layout_height="51dp" app:srcCompat="@drawable/my_profile_belo"
            android:id="@+id/imageView42"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="@+id/profileMenu5"
            app:layout_constraintEnd_toStartOf="@+id/recipesMenu4" android:layout_marginBottom="30dp"/>
    <ImageView
            android:layout_width="69dp"
            android:layout_height="54dp" app:srcCompat="@drawable/home_kremovo" android:id="@+id/imageView38"
            app:layout_constraintStart_toStartOf="@+id/homeMenu4"
            app:layout_constraintEnd_toStartOf="@+id/profileMenu5"
            app:layout_constraintBottom_toBottomOf="@+id/homeMenu4" android:layout_marginBottom="30dp"/>
    <ImageView
            android:layout_width="74dp"
            android:layout_height="52dp" app:srcCompat="@drawable/kapa_krem" android:id="@+id/imageView46"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="@+id/recipesMenu4"
            app:layout_constraintEnd_toEndOf="@+id/recipesMenu4" android:layout_marginBottom="30dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
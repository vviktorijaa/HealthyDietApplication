<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/limeta_blurred"
            android:id="@+id/linear_layout"
            android:orientation="vertical">
    </LinearLayout>
    <ImageView
            android:layout_width="213dp"
            android:layout_height="337dp" app:srcCompat="@drawable/info_settings"
            android:id="@+id/imageView6"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="70dp"/>
    <TextView
            android:text="...and this is the settings button, a place where you can adjust calories and water settings according to your preferences."
            android:layout_width="339dp"
            android:layout_height="159dp" android:id="@+id/textView14"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="120dp"
            android:textSize="22sp" android:textColor="#517528" android:gravity="center"
            app:layout_constraintHorizontal_bias="0.526"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/imageView6"/>
    <TextView
            android:text="X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView11"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="30sp" android:layout_marginTop="20dp" android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp" android:textColor="#517528" android:textStyle="bold"
            android:onClick="close3"/>
    <Button
            android:text="BACK"
            android:layout_width="96dp"
            android:layout_height="55dp" android:id="@+id/button13"
            app:backgroundTint="#4C9E45" android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp" android:onClick="back2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"/>
    <Button
            android:text="NEXT"
            android:layout_width="96dp"
            android:layout_height="55dp" android:id="@+id/button14"
            app:backgroundTint="#4C9E45" android:textSize="20sp"
            android:onClick="next4"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp" android:layout_marginRight="30dp" android:layout_marginEnd="30dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>